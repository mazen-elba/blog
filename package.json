{
  "name": "blog-backend",
  "version": "1.0.0",
  "description": "A blog about Spatial Computing technologies.",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently -n 'SERVER,CLIENT' -c 'bgRed,bgBlue' \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "nodemon server",
    "start": "node server.js",
    "biuld": "cd client && npm run build",
    "create-migration": "node ./server/database/actions/create-migration.js",
    "run-migration": "node ./server/database/actions/run-migrations",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": [
    "AR",
    "VR",
    "Computer Vision",
    "Robotics",
    "Cloud Computing",
    "Edge Computing",
    "Machine Learning",
    "Haptic Feedback",
    "IoT",
    "Big Data"
  ],
  "author": "Mazen Abdelbasir",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "apollo-server-koa": "^2.17.0",
    "axios": "^0.20.0",
    "bluebird": "^3.7.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-tools": "^6.2.2",
    "knex": "^0.21.5",
    "koa": "^2.13.0",
    "moment": "^2.28.0",
    "pg": "^8.3.3"
  }
}
